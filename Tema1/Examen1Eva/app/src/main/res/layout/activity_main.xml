<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nawtovi.examen1eva.MainActivity"
    android:columnCount="3"
    android:padding="16dp">

    <RadioButton
        android:text="Alumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdbAlumno"
        android:layout_row="7"
        android:layout_column="0" />

    <RadioButton
        android:text="Oyente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdbOyente"
        android:layout_row="7"
        android:layout_column="1" />

    <Button
        android:text="Nombrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNombrar"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="4"
        android:layout_gravity="fill_vertical" />

    <Button
        android:text="Salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSalir"
        android:layout_row="4"
        android:layout_column="2"
        android:layout_rowSpan="4"
        android:layout_gravity="fill" />

    <Button
        android:text="Votar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVotar"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="11"
        android:progress="6"
        android:id="@+id/skBProgreso"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titular"
        android:id="@+id/txtTitular"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:textAlignment="center"
        android:layout_gravity="fill_horizontal" />

    <Button
        android:text="Aceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnAceptar"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowSpan="3"
        android:layout_gravity="fill_vertical"
        android:layout_rowWeight="1" />

    <Button
        android:text="Limpiar"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLimpiar"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre"
        android:id="@+id/edtNombre"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal" />
</GridLayout>
